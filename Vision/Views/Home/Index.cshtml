@model ViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers



<div class="newdata new-author">
         <h3>Авторы</h3>
<form method="post" asp-controller="Home" asp-action="ActAuthor">
    <input name="name" placeholder="name" />
    <input name="rating" placeholder="rating" />
    <button type="submit">Submit</button>
</form>
@if (Model != null)
{
    @foreach (var author in Model.Authors)
    {
        <p>@author.name, @author.rating</p>
    }
    <p style="font-size: 48px;">Articles:</p>
    @foreach(var article in Model.Articles) {
                    <p>@article.name, @article.header, @article.author: @article.authorID 
                        <a asp-controller = "Article" asp-action = "Index" asp-route-id="@article.id.ToString()">page link</a>
                    </p>
				}

}
</div>

<div class="newdata new-article">
    <h3>Добавить статью</h3>
    <h4>можно здесь</h4>
    <form method="post" asp-controller="Home" asp-action="ActArticle" enctype="multipart/form-data">
        <p>Название</p>
        <input type="text" name="name" required />
        <p>Заголовок</p>
        <input type="text" name="header" required />
        <p>Автор</p>
        <input type="text" name="authorName" required list="authorsList" />
        <datalist id="authorsList">
            @foreach (var author in Model.Authors)
            {
                <option>@author.name</option>
            }
        </datalist>
        <p>Ваша статья</p>
        <input type="text" name="text" required />
        <p>Изображение</p>
        <input type="file" id="ArticleImage"
               name="ArticleImage"
               multiple="multiple" />
        <input type="submit" value="enter" />

    </form>


    @if (Model != null)
    {
        @foreach (var article in Model.Articles)
        {
            <div class="out-Article" style="border: 4px solid black; width: 300px; padding: 15px">
                <h3>@article.name</h3>
                <i>@article.author.name</i> <br />
                <i>@article.date</i>
                <h4>@article.header</h4>
                <p>@article.text</p>
            </div>
        }
    }
</div>

